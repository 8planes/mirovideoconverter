<Window x:Class="Mirosubs.Converter.Windows.UpdateNotification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Update Available!" Height="170" Width="286" Icon="/MiroConverter;component/resources/converter3.ico" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBlock Height="66" Margin="12,12,12,0" Name="textBlock1" VerticalAlignment="Top" Text="There is a new version of Miro Video Converter available -- we recommend that all users update." TextWrapping="Wrap" />
        <Button Height="23" Margin="0,0,91,12" Name="getNewVersion" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="106" Click="GetNewVersionClicked">Get New Version</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,10,12" Name="notNow" VerticalAlignment="Bottom" Width="75" Click="NotNowClicked">Not Now</Button>
    </Grid>
</Window>
